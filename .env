# .env
# Privacy-PoS 네트워크 환경 설정

# 네트워크 설정
NETWORK_NAME=privacy-pos-mainnet
CHAIN_ID=1337
NETWORK_PORT_START=30303

# 노드 설정
BOOTSTRAP_NODE_ID=bootstrap-001
VALIDATOR_COUNT=3
MIN_VALIDATORS=3
MAX_VALIDATORS=21

# 보안 설정
ENABLE_SSL=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 데이터베이스 설정
DB_TYPE=sqlite
DB_PATH=/app/data
BACKUP_INTERVAL=3600  # 1시간마다 백업

# API 설정
API_CORS_ORIGINS=*
API_RATE_LIMIT=100
API_AUTH_ENABLED=false

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=/var/log/privacy-pos/network.log
LOG_MAX_SIZE=100MB
LOG_ROTATION=daily

# 모니터링 설정
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# 알림 설정
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_ALERTS=false

# 성능 설정
BLOCK_GAS_LIMIT=8000000
MAX_TRANSACTIONS_PER_BLOCK=1000
CONSENSUS_TIMEOUT=30

# 개인정보보호 설정
PRIVACY_RISK_THRESHOLD=80
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=365

# AWS 설정 (선택사항)
AWS_REGION=us-east-1
AWS_S3_BACKUP_BUCKET=
AWS_CLOUDWATCH_ENABLED=false

# 백업 설정
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=privacy-pos-backups
BACKUP_RETENTION_DAYS=30